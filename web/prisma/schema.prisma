// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  emailVerified Boolean   @default(false)
  password      String
  name          String
  phone         String?
  phoneVerified Boolean   @default(false)
  avatar        String?
  role          Role      @default(USER)
  listings      Listing[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  favorites     Favorite[]
  
  // Messaging relations
  conversationIds String[] @db.ObjectId
  conversations   Conversation[] @relation(fields: [conversationIds], references: [id])
  messages        Message[]
  
  // Q&A relations
  questions       Question[]
  answers         Answer[]
  meetups         Meetup[]
  
  // Notifications
  notifications   Notification[]
  
  // Reviews
  reviewsGiven    Review[] @relation("ReviewsGiven")
  reviewsReceived Review[] @relation("ReviewsReceived")
  
  // Rating statistics
  averageRating   Float?   @default(0)
  totalReviews    Int      @default(0)
  
  // Trust badges
  isVerified      Boolean  @default(false)
  isTrustedSeller Boolean  @default(false)
  
  // Payments
  payments        Payment[]
}

model Category {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String     @unique
  slug      String     @unique
  icon      String?
  listings  Listing[]
  questions Question[]
}

model Brand {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String    @unique
  slug     String    @unique
  logo     String?
  listings Listing[]
}

model Listing {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       Float
  condition   String   // new, like-new, good, fair
  images      String[]
  phone       String
  location    String?

  categoryId String   @db.ObjectId
  category   Category @relation(fields: [categoryId], references: [id])

  brandId String @db.ObjectId
  brand   Brand  @relation(fields: [brandId], references: [id])

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])

  isActive       Boolean        @default(true)
  approvalStatus ApprovalStatus @default(PENDING)
  viewCount      Int            @default(0)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  favorites      Favorite[]

  // Promotion fields
  isFeatured     Boolean   @default(false)
  featuredUntil  DateTime?
  isPriority     Boolean   @default(false)
  priorityUntil  DateTime?
  isUrgent       Boolean   @default(false)
  urgentUntil    DateTime?
  
  // Phone visibility
  showPhone      Boolean   @default(true)
  
  // Payments
  payments       Payment[]
}

model Favorite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  listingId String   @db.ObjectId
  listing   Listing  @relation(fields: [listingId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
}

model Conversation {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  participants String[] @db.ObjectId // Array of User IDs
  lastMessage String?
  lastMessageAt DateTime @default(now())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  messages  Message[]
  
  users     User[]    @relation(fields: [participants], references: [id])
}

model Message {
  id             String       @id @default(auto()) @map("_id") @db.ObjectId
  conversationId String       @db.ObjectId
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  
  senderId       String       @db.ObjectId
  sender         User         @relation(fields: [senderId], references: [id])
  
  content        String
  imageUrl       String?
  isRead         Boolean      @default(false)
  createdAt      DateTime     @default(now())
}

model Question {
  id             String         @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  description    String
  images         String[]
  
  categoryId     String         @db.ObjectId
  category       Category       @relation(fields: [categoryId], references: [id])
  
  userId         String         @db.ObjectId
  user           User           @relation(fields: [userId], references: [id])
  
  approvalStatus ApprovalStatus @default(PENDING)
  
  // Promotion fields
  isFeatured     Boolean        @default(false)
  featuredUntil  DateTime?
  isPriority     Boolean        @default(false)
  priorityUntil  DateTime?
  
  viewCount      Int            @default(0)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  
  answers        Answer[]
}

model Answer {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  content         String
  
  questionId      String   @db.ObjectId
  question        Question @relation(fields: [questionId], references: [id])
  
  userId          String   @db.ObjectId
  user            User     @relation(fields: [userId], references: [id])
  
  isAccepted      Boolean  @default(false)
  isReadByOwner   Boolean  @default(false)
  createdAt       DateTime @default(now())
}

model EmailVerification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model PhoneVerification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  phone     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

enum MeetupType {
  CONCERT
  LESSON
  BAND
  GEAR
  STUDIO
  COVERS
}

model Meetup {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  date        DateTime
  location    String
  type        MeetupType
  images      String[]
  videoUrl    String?
  price       Float?
  
  approvalStatus ApprovalStatus @default(PENDING)

  userId      String     @db.ObjectId
  user        User       @relation(fields: [userId], references: [id])
  
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum NotificationType {
  MESSAGE              // New message received
  FAVORITE_UPDATE      // Favorited listing was updated
  LISTING_APPROVED     // Your listing was approved
  LISTING_REJECTED     // Your listing was rejected
  QUESTION_APPROVED    // Your question was approved
  QUESTION_REJECTED    // Your question was rejected
  MEETUP_APPROVED      // Your meetup was approved
  MEETUP_REJECTED      // Your meetup was rejected
}

model Notification {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  userId    String           @db.ObjectId
  user      User             @relation(fields: [userId], references: [id])
  
  type      NotificationType
  title     String
  message   String
  link      String?          // URL to navigate when clicked
  
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
}

model Review {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  rating      Int      // 1-5 stars
  comment     String?
  
  reviewerId  String   @db.ObjectId
  reviewer    User     @relation("ReviewsGiven", fields: [reviewerId], references: [id])
  
  reviewedId  String   @db.ObjectId
  reviewed    User     @relation("ReviewsReceived", fields: [reviewedId], references: [id])
  
  listingId   String?  @db.ObjectId  // Optional: which transaction/listing
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([reviewerId, reviewedId, listingId])
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

model Payment {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  userId          String        @db.ObjectId
  user            User          @relation(fields: [userId], references: [id])
  
  amount          Float
  currency        String        @default("TRY")
  status          PaymentStatus @default(PENDING)
  
  listingId       String?       @db.ObjectId
  listing         Listing?      @relation(fields: [listingId], references: [id])
  
  description     String?
  
  // Promotion details
  promotionType   String?       // FEATURED, PRIORITY, URGENT
  promotionWeeks  Int?
  
  // Provider details
  provider        String        // paytr, stripe, iyzico
  transactionId   String?       // Provider transaction ID
  paymentToken    String?       // Payment token from provider
  merchantOid     String?       // Our order ID
  
  // Metadata
  ipAddress       String?
  userAgent       String?
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([userId])
  @@index([status])
  @@index([transactionId])
  @@index([merchantOid])
}
